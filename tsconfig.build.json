{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noEmitOnError": true,
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "./lib",
    "skipLibCheck": true,
    "types": ["react-native"]
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "**/build/**", "example"]
}
